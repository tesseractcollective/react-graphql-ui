{
  "compilerOptions": {
    "outDir": "dist/",
    "target": "ES5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "ES2020"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "jsx": "react",
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "baseUrl": "./src",
    "paths": {
      "@/hooks": [
        "hooks"
      ],
      "@/hooks/*": [
        "hooks/*"
      ],
      "@/support": [
        "support"
      ],
      "@/support/*": [
        "support/*"
      ],
      "@/components": [
        "components"
      ],
      "@/components/*": [
        "components/*"
      ],
      "@/types": [
        "types"
      ],
      "@/types/*": [
        "types/*"
      ],
      "@/context": [
        "context"
      ],
      "@/context/*": [
        "context/*"
      ],
      "@/*": ["./src/*"],
      "@/gql": ["./src/resources/config/generated/resourceApi"]
    }
  },
  "include": [
    "src/hooks/*.{ts|tsx|js|jsx}",
    "src/hooks/**/*.{ts|tsx|js|jsx}",
    "src/support/*.{ts|tsx|js|jsx}",
    "src/support/**/*.{ts|tsx|js|jsx}",
    "src/types/*.{ts|tsx|js|jsx}",
    "src/types/**/*.{ts|tsx|js|jsx}",
    "src/context/*.{ts|tsx|js|jsx}",
    "src/context/**/*.{ts|tsx|js|jsx}",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "scripts",
  ]
}
